@model  part_1.Models.loginModel

@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>

    <div class="container">
        <h2>Login
      
        </h2>
          <h5 style="color:gray">
             <h1 class="fa fa-user-circle profile-icon" style="margin-left:45%"></h1>
             <br />
     
        </h5>
       
       <form asp-action="Login" method="post">
            <label for="username">email</label>
            <input asp-for="Username" type="text" id="username" placeholder="Enter your username" required />
            <span asp-validation-for="Username" class="text-danger"></span>

            <label for="password">Password</label>
            <input asp-for="Password" type="password" id="password" placeholder="Enter your password" required />
            <span asp-validation-for="Password" class="text-danger"></span>

            <label for="work-type">Role of Work</label>
            <select asp-for="WorkType" id="work-type" required>
                <option value="" disabled selected>Select type of work</option>
                <option value="lecturer">Lecturer</option>
                <option value="coordinator">Programme Coordinator</option>
            </select>
            <span asp-validation-for="WorkType" class="text-danger"></span>

            <button type="submit">Login</button>

            <p style="color:gray">Don't have an account ? <a asp-action="Register">Register here</a></p>
        </form>
    </div>

</body>
</html>
